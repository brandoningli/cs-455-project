{

    "description": "Attempts to block advertisements using a master filter list.",
    "manifest_version": 2,
    "name": "truBlock",
    "version": "1.0.1",
    "icons": {
        "48": "icons/icon.png",
        "96": "icons/icon96.png"
    },

    "background": {
        "page": "background_page.html"
    },

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],

    "browser_action": {
        "default_popup": "popup.html"
    },

    "content_security_policy": "script-src 'self' https://brandoningli.github.io; object-src 'self'"

}